<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".Libro.LibroActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <!-- Otros campos del formulario de registro de libros -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="false"
            android:orientation="vertical"
            android:padding="@dimen/_10sdp">

            <EditText
                android:id="@+id/tituloLibro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/background_input_field"
                android:drawableStart="@drawable/ic_baseline_text_fields_24"
                android:drawablePadding="@dimen/_5sdp"
                android:hint="Titulo del libro"
                android:inputType="text"
                android:padding="@dimen/_10sdp"
                android:textColor="@color/colorPrimary"
                android:textColorHint="@color/colorPrimary"
                android:textSize="@dimen/_14sdp" />

            <EditText
                android:id="@+id/isbnLibro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/background_input_field"
                android:drawableStart="@drawable/ic_baseline_text_fields_24"
                android:drawablePadding="@dimen/_5sdp"
                android:hint="ISBN del libro"
                android:inputType="number"
                android:padding="@dimen/_10sdp"
                android:textColor="@color/colorPrimary"
                android:textColorHint="@color/colorPrimary"
                android:textSize="@dimen/_14sdp" />


            <EditText
                android:id="@+id/tomoLibro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/background_input_field"
                android:drawableStart="@drawable/ic_baseline_text_fields_24"
                android:drawablePadding="@dimen/_5sdp"
                android:hint="Tomo del libro"
                android:inputType="number"
                android:padding="@dimen/_10sdp"
                android:textColor="@color/colorPrimary"
                android:textColorHint="@color/colorPrimary"
                android:textSize="@dimen/_14sdp" />

            <EditText
                android:id="@+id/fechaPublicacionLibro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/background_input_field"
                android:clickable="true"
                android:drawableStart="@drawable/baseline_date_range_24"
                android:drawablePadding="@dimen/_5sdp"
                android:focusable="false"
                android:hint="Fecha de publicación"
                android:inputType="date"
                android:padding="@dimen/_10sdp"
                android:textColor="@color/colorPrimary"
                android:textColorHint="@color/colorPrimary"
                android:textSize="@dimen/_14sdp" />


            <!--         editText for name input-->
            <EditText
                android:id="@+id/descripcionLibro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/background_input_field"
                android:drawableStart="@drawable/ic_baseline_text_fields_24"
                android:drawablePadding="@dimen/_5sdp"
                android:hint="Descripción"
                android:inputType="text"
                android:padding="@dimen/_10sdp"
                android:textColor="@color/colorPrimary"
                android:textColorHint="@color/colorPrimary"
                android:textSize="@dimen/_14sdp" />


            <SearchView
                android:id="@+id/findCategoria"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/background_input_field"
                android:drawableStart="@drawable/baseline_search_24"
                android:drawablePadding="@dimen/_5sdp"
                android:iconifiedByDefault="false"
                android:queryHint="Buscar categoria..."
                android:textColor="@color/colorPrimary"
                android:textColorHint="@color/colorPrimary"
                android:textSize="@dimen/_14sdp" />

            <SearchView
                android:id="@+id/findEditorial"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/background_input_field"
                android:drawableStart="@drawable/baseline_search_24"
                android:drawablePadding="@dimen/_5sdp"
                android:iconifiedByDefault="false"
                android:queryHint="Buscar editorial..."
                android:textColor="@color/colorPrimary"
                android:textColorHint="@color/colorPrimary"
                android:textSize="@dimen/_14sdp" />


            <SearchView
                android:id="@+id/findIdioma"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/background_input_field"
                android:drawableStart="@drawable/baseline_search_24"
                android:drawablePadding="@dimen/_5sdp"
                android:iconifiedByDefault="false"
                android:queryHint="Buscar idioma..."
                android:textColor="@color/colorPrimary"
                android:textColorHint="@color/colorPrimary"
                android:textSize="@dimen/_14sdp" />


            <SearchView
                android:id="@+id/findMateria"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/background_input_field"
                android:drawablePadding="@dimen/_5sdp"
                android:iconifiedByDefault="false"
                android:queryHint="Buscar materia..."
                android:textColor="@color/colorPrimary"
                android:textColorHint="@color/colorPrimary"
                android:textSize="@dimen/_14sdp" />

            <!-- Busqueda de autor-->

            <SearchView
                android:id="@+id/searchAutor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/background_input_field"
                android:drawableStart="@drawable/baseline_search_24"
                android:drawablePadding="@dimen/_5sdp"
                android:iconifiedByDefault="false"
                android:queryHint="Buscar autor..."
                android:textColor="@color/colorPrimary"
                android:textColorHint="@color/colorPrimary"
                android:textSize="@dimen/_14sdp" />


            <com.google.android.material.chip.ChipGroup
                android:id="@+id/chipGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:singleSelection="true">

            </com.google.android.material.chip.ChipGroup>


            <!--fin busqueda autor-->

            <EditText
                android:id="@+id/fechaLibro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/background_input_field"
                android:clickable="true"
                android:drawableStart="@drawable/baseline_date_range_24"
                android:drawablePadding="@dimen/_5sdp"
                android:focusable="false"
                android:hint="Fecha de creación"
                android:inputType="date"
                android:padding="@dimen/_10sdp"
                android:textColor="@color/colorPrimary"
                android:textColorHint="@color/colorPrimary"
                android:textSize="@dimen/_14sdp" />


            <EditText
                android:id="@+id/idLibro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/background_input_field"
                android:drawableStart="@drawable/ic_baseline_text_fields_24"
                android:drawablePadding="@dimen/_5sdp"
                android:hint=""
                android:inputType="number"
                android:padding="@dimen/_10sdp"
                android:textColor="@color/colorPrimary"
                android:textColorHint="@color/colorPrimary"
                android:textSize="@dimen/_14sdp"
                android:visibility="gone" />

            <Button
                android:id="@+id/botonEliminarLibro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="eliminar"
                android:text="Eliminar"
                android:visibility="gone" />

            <Button
                android:id="@+id/botonModificarLibro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="modificar"
                android:text="Modificar"
                android:visibility="gone" />


            <!--        editText for note input-->

        </LinearLayout>


        <!--    fab button for add data to database-->

    </ScrollView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabLibro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:contentDescription="TODO"
        android:elevation="@dimen/_5sdp"
        android:src="@drawable/ic_baseline_add_24"
        app:backgroundTint="@color/colorTextPrimary"
        app:pressedTranslationZ="@dimen/_10sdp"
        app:tint="@color/white" />

</RelativeLayout>
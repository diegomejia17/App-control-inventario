<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Editorial.FindEditorialById">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="false"
        android:orientation="vertical"
        android:padding="@dimen/_10sdp">


        <EditText
            android:id="@+id/buscarEditorial"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@drawable/background_input_field"
            android:drawableStart="@drawable/baseline_search_24"
            android:drawablePadding="@dimen/_5sdp"
            android:hint="ID Editorial"
            android:inputType="number"
            android:padding="@dimen/_10sdp"
            android:textColor="@color/colorSecondary"
            android:textColorHint="@color/colorSecondary"
            android:textSize="@dimen/_14sdp" />

        <Button
            android:id="@+id/botonConsultarEditorial"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="consultarEditorial"
            android:text="Buscar" />

    </LinearLayout>


</RelativeLayout>